# Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB Connection
# For local development, use local MongoDB:
MONGODB_URI=mongodb://localhost:27017/dilemma
# OR use MongoDB Atlas for both local and production:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dilemma

# JWT Secret (use a strong random string, min 32 characters)
JWT_SECRET=your-local-jwt-secret-key-min-32-chars-long

# Client URL
# Local development:
CLIENT_URL=http://localhost:5173
# Production (set in Vercel):
# CLIENT_URL=https://your-frontend.vercel.app

# Cloudinary Configuration (get free account at cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Environment (development for local, production for Vercel)
NODE_ENV=development

# Port (5000 for local, Vercel sets automatically)
PORT=5000
